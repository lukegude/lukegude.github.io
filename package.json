{
  "name": "lukegude.github.io",
  "version": "1.0.0",
  "description": "Personal website",
  "scripts": {
    "build:css": "tailwindcss -i ./assets/css/blog.css -o ./_site/assets/css/blog.css",
    "watch:css": "tailwindcss -i ./assets/css/blog.css -o ./_site/assets/css/blog.css --watch",
    "build": "npm run build:css && jekyll build",
    "start": "npm run watch:css & bundle exec jekyll serve --livereload"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.5",
    "postcss-cli": "^11.0.1",
    "postcss-nesting": "^13.0.2",
    "tailwindcss": "^3.3.3"
  }
}
